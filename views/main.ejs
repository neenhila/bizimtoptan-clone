<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
<script>
  function sendDeliveryType(data) {
    $.ajax({
      url: "/post",
      data: JSON.stringify(data),
      dataType: "json",
      contentType: "application/json",
      method: "POST",
      success: function() {
        console.log("Success.")
      }

    })
    window.location.replace('/');
  }

  function sendChoosePage(data) {
    $.ajax({
      url: "/post",
      data: JSON.stringify(data),
      dataType: 'json',
      contentType: 'application/json',
      method: "POST",
      success: function() {
        console.log("Success")
      }
    })
    setTimeout(() => {
      window.location.replace('/#rotate');
      window.location.reload();
    }, 400)
  }

  $(document).ready(function() {
    $('#owl-carousel').owlCarousel({
      loop: true,
      direction: 'vertical',
      autoplay: true,
      items: 1,
      autoplayTimeout: 3000,
      autoplayHoverPause: true,
      infinite: true,
      rtl: false,
    });
  })

  var owl = $("#owl-carousel-bottom").owlCarousel({
    loop: true,
    direction: 'vertical',
    autoplay: false,
    items: 6,
    infinite: true,
    rtl: false,
    margin: 0
  })
  var owl2 = $("#owl-carousel-last").owlCarousel({
    loop: true,
    direction: 'vertical',
    autoplay: false,
    items: 6,
    infinite: true,
    rtl: false,
    margin: 0
  })
  $("#left-bottom-last").click(function() {
    owl2.trigger("prev.owl.carousel")
  })
  $("#right-bottom-last").click(function() {
    owl2.trigger("next.owl.carousel")
  })
  
  $("#left-bottom").click(function() {
    owl.trigger("prev.owl.carousel")
  })
  $("#right-bottom").click(function() {
    owl.trigger("next.owl.carousel")
  })

  $(".titleItem").click(function() {
    let array = ["yeniGelenler", "cokSatanlar", "firsatUrunleri"];
    array.forEach(item => {
      if (item !== this.id) {
        if (item === "yeniGelenler") {
          $("#yeniGelenler").removeClass("title-container-a-checked");
        } else if (item === "cokSatanlar") {
          $("#cokSatanlar").removeClass("title-container-a-checked");

        } else if (item === "firsatUrunleri") {
          $("#firsatUrunleri").removeClass("title-container-a-checked");
        }
      }

    })
    $(this).addClass("title-container-a-checked")
    sendChoosePage({
      data: this.id
    })
  })


  $(".heart").click(function() {
    if ($(this).html() === '<i class="fa-regular fa-heart"></i>') {
      $(this).html("<i class='fa-solid fa-heart'></i>")
    } else {
      $(this).html('<i class="fa-regular fa-heart"></i>')
    }
  })
</script>

